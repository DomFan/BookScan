<image class="toWrite" bindtap="onScanButton" src="/image/add2.png"></image>
<view class="page">
  <image src="{{imageSource}}" mode="aspectFit" />
  <view class="page__hd">
    <view class="page__title">{{articleTitle}}</view>
    <view class="page__desc">{{articleAuthor}}</view>
    <view class="page__desc">{{isbn}}</view>
    <view class="weui-article">
      <view class="weui-article__section">
        <view class="weui-article__section">
          <text decode="true" space="true" class="weui-article__p">{{articleContent}}</text>
        </view>
      </view>
    </view>
  </view>
</view>